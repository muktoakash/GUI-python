BoxLayoutExample:

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: 'A'
        size_hint: 0.5, None
        # size: "100dp", "60dp"
        # width: "100dp"
        height: "60dp"

        # x, center_x, right
        # y, center_y, top
        pos_hint: { "right" : 1 }

    Button:
        text: 'B'
        size_hint: 0.5, 2

    Label:
        text: 'C'

<MainWidget>:
    Button:
        text: "Hello"
        size: "40dp", "40dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1
    Label:
        text: "Hello2"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        # color: rgba
        color: 1, 0, 0, 1
