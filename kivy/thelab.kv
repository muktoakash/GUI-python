<GridLayoutExample@GridLayout>:
    # rows
    # cols
    cols: 3
    rows: 2
    Button:
        text: "A"
        size_hint: None, 1
        width: "68dp"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1 # Needed to  match with A
        width: "68dp"
    Button:
        text: "E"
    Button:
        text: "F"


<AnchorLayoutExample>:
    # right left center
    anchor_x: "center"
    # bottom top center
    anchor_y: "top"
    BoxLayout:
        size_hint:.2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: 'A'
        size_hint: 0.5, 0.5
        # size: "100dp", "60dp"
        # width: "100dp"
        # height: "60dp"

        # x, center_x, right
        # y, center_y, top
        # pos_hint: { "right" : 1 }
        pos_hint: { "center_y": .5 }

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'

    Label:
        text: 'C'

